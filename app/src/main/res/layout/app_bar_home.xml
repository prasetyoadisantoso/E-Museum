<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="soft.museum.com.museum.Home"
    android:background="@drawable/background"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/colorAccent"
            app:titleMargins="@dimen/nav_header_vertical_spacing">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BERANDA"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:id="@+id/toolbar_title"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="25sp"
                />
        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="345dp"
        android:layout_gravity="center"
        android:minHeight="1200dp"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/Welcome"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="400dp"
            android:textAlignment="center"
            />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/roundcorners"
            android:layout_marginVertical="100dp"
            android:layout_marginHorizontal="30dp"
            >
        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginVertical="25dp"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/building"
            android:contentDescription="@string/android_studio"
            android:clickable="true"
            >
        </ImageButton>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/roundcorners"
            android:layout_marginVertical="400dp"
            android:layout_marginHorizontal="30dp"
            >
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="30dp"
                android:src="@drawable/sculpture"
                android:contentDescription="@string/android_studio"
                android:clickable="true"
                >
            </ImageButton>
        </FrameLayout>

        <!--ImageView
            android:layout_marginTop="600dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/exhibition"
            android:contentDescription="@string/android_studio"
            />

        <ImageView
            android:layout_marginTop="850dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/news"
            android:contentDescription="@string/android_studio"
            />-->

    </FrameLayout>
    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />



</android.support.design.widget.CoordinatorLayout>
